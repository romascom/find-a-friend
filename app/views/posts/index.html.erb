<div class="container-fluid">
	<%= image_tag "library-banner.jpg", class: "img-responsive img-rounded" %>

  <% if current_user %>
    <h1>Your Groups</h1>

    <% if @posts.length != 0 %>
      <% @posts.each do |post| %>
        <% if post.onid == current_user %>
          <%= render partial: "post", :object => post %>
        <% end %>
      <% end %>
    <% else %>
        You have not created any groups
    <% end %>
  <% end %>

	<h1>Groups</h1>

  <% if @posts.length != 0 %>
    <% @posts.each do |post| %>
      <div class="panel-group" id="accordion">
        <% if post.today? %>
          <%= render partial: "post", :object => post %>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <%= I18n.t('post.no_posts_message') %>
  <% end %>
</div>
