<div class="panel panel-default">
  <div class="panel panel-heading">
    <div class="panel-title">
      <%= link_to post.title, post_path(post) %>
      <%= link_to "Edit", edit_post_path(post), :class => "edit-link" if current_user.onid == post.onid && !current_user.onid.nil?%>
      <%= link_to "Delete", post_path(post), :method => :delete, :class => "edit-link" if current_user.onid == post.onid && !current_user.onid.nil?%>
    </div>
  </div>
  <div class="panel panel-body">
    Description: <%= post.description %><br>
    Meeting Time: <%= post.meeting_time %>
  </div>
</div>
