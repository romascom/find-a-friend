<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <%= simple_form_for(@post, :html => {:class => "form-horizontal"}) do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :location %>
        <p><%= f.label :meeting_time %><br>
        <%= f.text_field :meeting_time , :class => 'datetime_picker' %></p>
        <p><%= f.label :end_time %><br>
        <%= f.text_field :end_time , :class => 'datetime_picker' %></p>
        <%= f.input :recipients %>
        <%= f.hidden_field :onid, :value => current_user %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
